div.col-md-12
  form.form-horizontal(name="movieForm",role='form',ng-submit="movieForm.$valid && addMovie()", novalidate)
    div.form-group
      label.control-label(for='title') Title
      input.form-control(id='title', placeholder='Input Title', type='text', ng-model='movie.title', required)
    div.form-group
      label.control-label(for='link') Url
      input.form-control(id='link', placeholder='Input url for clip', type='url', ng-model='movie.link', required)
    div.form-group
      label.control-label(for='creator') Author
      input.form-control(id='creator', placeholder='Input Author', type='text', ng-model='movie.creator', required)
    div.form-group
      label.control-label(for='description') Description
      textarea.form-control(id='description', ng-model='movie.description')
    button.btn.btn-default(type='submit') Submit
