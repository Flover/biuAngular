extends layout

block body
  div.container
    div.row(ng-controller='LoginCtrl')
      div.col-md-2.col-md-offset-8
        input#name.form-control(type='text', ng-model='username', ng-hide='$root.isLogged', placeholder='Username')
      button.btn.btn-default.col-md-1(ng-click="register()", ng-hide='$root.isLogged') Register
      button.btn.btn-default.col-md-1(ng-click="login()", ng-hide='$root.isLogged') Login
      button.btn.btn-default.col-md-1(ng-click="logout()", ng-show='$root.isLogged') Logout
    div.row(ng-controller='AppCtrl')
      div.col-md-12
        div.row
          h2.col-md-12 Hello {{$root.userSession.username}}
        div.row
          div.col-md-12
            ul.nav.nav-pills
              li(ng-class="{active:isActive(1)}")
                a(href='showAll', ng-click="activeTab(1)") Show All Clips
              li(ng-class="{active:isActive(2)}", ng-show='$root.isLogged')
                a(href='addNew', ng-click="activeTab(2)") Add New Clip
              li(ng-class="{active:isActive(3)}")
                a(href='showUsers', ng-click="activeTab(3)") Show All Users

        div.row(ng-view)

  script(src='js/lib/angular/angular.min.js')
  script(src='js/lib/angular/angular-cookies.min.js')
  script(src='/socket.io/socket.io.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
  script(src='js/jquery-2.1.1.min.js')
  script(src='js/bootstrap.min.js')
